<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="420dp"
                android:weightSum="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rounded_edges"
                android:id="@+id/event_info_ll"
                android:radius="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eventInfoScroll">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/eventIcon"
                    android:src="@drawable/type_icon_game"
                    android:layout_gravity="right"
                    android:layout_weight="0.14"
                    android:layout_marginLeft="10dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.86"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="EVENT NAME"
                    android:id="@+id/eventName"
                    android:textSize="34dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:gravity="left"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Event Date"
                android:id="@+id/eventDate"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description"
                android:id="@+id/eventDesc"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Length: "
                android:id="@+id/eventLength"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Created by: "
                android:id="@+id/eventCreator"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="I'm Going!"
                android:id="@+id/attend"
                android:background="@android:color/holo_green_light"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Event Clock"
                android:id="@+id/eventClock"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="X h Y m left"
                android:id="@+id/eventTimeTo"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/writeCommentButton"
                    android:text="Write comment"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp" />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/viewCommentButton"
                    android:text="View comments"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>