<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:id="@+id/event_info_ll"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_peekHeight="120dp">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:background="@drawable/border_event_info_layout"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:elevation="15dp"
        android:onClick="toggleState">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="toggleState">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:onClick="toggleState">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/measurement"
                    android:orientation="vertical"
                    android:onClick="toggleState">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="toggleState">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="0.86"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorTextPrimary"
                            android:id="@+id/eventName"
                            android:text="Text"
                            android:textSize="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:paddingTop="5dp"
                            android:gravity="center_vertical"
                            android:onClick="toggleState" />

                        <Button
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:textSize="12dp"
                            android:text="Join"
                            android:textAllCaps="false"
                            android:id="@+id/attend"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryLight"
                        android:layout_marginBottom="10dp"
                        android:onClick="toggleState"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="toggleState">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Starts"
                            android:textSize="12sp"
                            android:layout_marginBottom="0dp"
                            android:textAppearance="@style/EventInfoBody"
                            android:onClick="toggleState"/>

                        <View android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Length"
                            android:textSize="12sp"
                            android:layout_marginBottom="0dp"
                            android:textAppearance="@style/EventInfoBody"
                            android:onClick="toggleState"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="toggleState"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Date"
                            android:id="@+id/eventDate"
                            android:textAppearance="@style/EventInfoBody"
                            android:onClick="toggleState"/>

                        <View android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Length"
                            android:textColor="@color/colorAccentDark"
                            android:id="@+id/eventLength"
                            android:textAppearance="@style/EventInfoBody"
                            android:onClick="toggleState"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryLight"
                    android:id="@+id/breakLine"
                    android:onClick="toggleState"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="12sp"
                    android:layout_marginBottom="0dp"
                    android:textAppearance="@style/EventInfoBody"
                    android:onClick="toggleState"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:id="@+id/eventDesc"
                    android:layout_marginBottom="10dp"
                    android:textAppearance="@style/EventInfoBody"
                    android:onClick="toggleState" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:onClick="toggleState" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created by"
                        android:layout_marginBottom="10dp"
                        android:textAppearance="@style/EventInfoBody"
                        android:onClick="toggleState" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/creatorPic"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginLeft="20dip"
                        android:layout_marginBottom="10dip"
                        android:background="@drawable/picture_background"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creator"
                        android:id="@+id/eventCreator"
                        android:layout_marginBottom="10dp"
                        android:textAppearance="@style/EventInfoBody"
                        android:onClick="toggleState" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Joined"
                        android:textSize="18sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textAllCaps="false"
                        android:onClick="toggleState"
                        android:id="@+id/numJoinedText"/>

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="Invite"
                        android:textAllCaps="false"
                        android:textSize="10sp"
                        android:background="@color/colorAccent"
                        android:onClick="goToInviteUsers"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"/>
                </LinearLayout>

                <com.stazo.project_18.InteractiveScrollViewHorizontal
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/joinedScrollView"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/joinedLayout"
                        android:layout_marginTop="0dip"
                        android:layout_marginBottom="0dip">
                    </LinearLayout>

                </com.stazo.project_18.InteractiveScrollViewHorizontal>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="toggleState"/>


                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="X h Y m left"
                    android:textAppearance="@style/EventInfoBody"
                    android:id="@+id/eventTimeTo"
                    android:onClick="toggleState"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:onClick="toggleState">

                    <!--Button
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:id="@+id/writeCommentButton"
                        android:text="Write comment"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp" /-->
                    <Button
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:id="@+id/viewCommentButton"
                        android:text="View comments"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>