<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stazo.campus">

    <!-- for FB login -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Give the map_overview access to the user's location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- For Camera and Photo permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name="com.stazo.campus.Campus"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- Initial Act -->
        <activity
            android:name="com.stazo.campus.InitialAct"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Create Event Act -->
        <activity
            android:name="com.stazo.campus.CreateEventAct"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <!-- <activity -->
        <!-- android:name=".MapAct" -->
        <!-- android:label="@string/title_activity_map" -->
        <!-- android:theme="@style/AppTheme.NoActionBar" > -->
        <!-- </activity> -->
        <!--
            activity
            android:name=".EventInfoAct"
            android:label="@string/title_activity_event_info"
            android:theme="@style/AppTheme.NoActionBar" >
            <activity android:name=".EventInfoAct" />
        -->


        <!-- Main Act -->
        <activity
            android:name="com.stazo.campus.MainAct"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <!-- Login Act -->
        <activity
            android:name="com.stazo.campus.LoginAct"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Which act is this? -->
        <!-- for FB Login -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Location Select Act -->
        <activity
            android:name="com.stazo.campus.LocSelectAct"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <!-- Logout Act (temporary) -->
        <activity
            android:name="com.stazo.campus.LogoutAct"
            android:label="@string/title_activity_logout"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- <activity -->
        <!-- android:name=".ListAct" -->
        <!-- android:label="@string/title_activity_list" -->
        <!-- android:theme="@style/AppTheme.NoActionBar"> -->
        <!-- </activity> -->


        <!-- <activity android:name=".InitialAct"></activity> -->

        <!-- Add Trails Act -->
        <activity
            android:name="com.stazo.campus.AddTrailsAct"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_add_trails"
            android:parentActivityName="com.stazo.campus.MainAct"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stazo.campus.MainAct" />
        </activity>
        <activity
            android:name="com.stazo.campus.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <!-- for Google Maps?? -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBsxIIBP6pSzAtlcB_lY-juUCBHLu9WP-E" />

        <!-- for FB login -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.stazo.campus.InviteUsersAct"
            android:label="@string/title_activity_invite_user"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <!-- For storing photos -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.stazo.campus.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>

    </application>

</manifest>
